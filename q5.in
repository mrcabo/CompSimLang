# Create net
addNet myNet -i 5

# Add layers
addGroup input 30 INPUT
addGroup hidden 15
addGroup context 15 ELMAN
addGroup output 30 OUTPUT

connectGroups {input context} hidden output
elmanConnect  hidden  context

# order the groups
orderGroups bias input context hidden output

# Randomizes weights from +/- 1
randWeights -r 1

changeGroupType "hidden" +WRITE_OUTPUTS

# Loads training set
#loadExamples q5_train.ex -s trainset

loadExamples q5_train_block0.ex -s block0
loadExamples q5_train_block1.ex -s block1
loadExamples q5_train_block2.ex -s block2
loadExamples q5_train_block3.ex -s block3
loadExamples q5_train_block4.ex -s block4
loadExamples q5_train_block5.ex -s block5
loadExamples q5_train_block6.ex -s ungrammatical
loadExamples q5_train_block7.ex -s recovery

loadExamples q5_test.ex -s testset

useTestingSet testset

# Creates error graph
graphObject error

# Hyperparameters
setObj learningRate  0.1
setObj momentum  0.8
setObj batchSize  1

# block0
useTrainingSet block0
useTestingSet block0
#get full network output while training
viewUnits
openNetOutputFile testOutputDebug.out -append
test
closeNetOutputFile
dougsMomentum 72 -r 1

